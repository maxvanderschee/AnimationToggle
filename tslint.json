{
    "defaultSeverity": "warning",
    "extends": "tslint:recommended",
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
        "quotemark":[true, "single"],
        "indent": [true, "tabs", 4],
        "interface-name": true,
        "ordered-imports": true,
        "object-literal-sort-keys": false,
        "no-consecutive-blank-lines": true,
    }
}